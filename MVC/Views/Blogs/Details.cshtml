@model BlogModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Dinosaur Details";
}


<div>
    <dl class="row aligncenter">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.DinosaurName)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.DinosaurName)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Features)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Features)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UserNameDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UserNameDisplay)
        </dd>

        <dt class="col-2">
            @Html.DisplayNameFor(model => model.TagsDisplay)
        </dt>
        <dd class="col-6">
            @{
                string tags = "";
                string seperator = "<br />";
                foreach (var tagDisplay in Model.TagsDisplay)
                {
                    tags += tagDisplay.Name + seperator;
                }
                tags = tags.TrimEnd(seperator.ToCharArray());
            }
            @Html.Raw(tags)
    </dl>
</div>
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



